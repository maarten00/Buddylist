<div class="blogpost-detail">
  <div class="span" style="display: none;"></div>
  <h1>Audiopost</h1>

  <div class="row-fluid">
    <div class="picture span3"><%= image_tag gravatar(@audioposting.user.email, 60) %></div>
    <header class="span8"><h3><%= link_to @audioposting.user.username, @audioposting.user %></h3></header>
  </div>
  <br>

  <header><h2><%= @audioposting.title %></h2></header>
  <div class="row-fluid">
    <div class="well span5">
      <audio controls>
        <source src="<%= @audioposting.audiofile %>" type="audio/mpeg">
        Your browser does not support the audio element.
      </audio>
    </div>

    <div class="span5">
      <p><strong>Tags:</strong> <%= raw @audioposting.tag_list.map { |t| link_to t, blogtag_path(t) }.join(', ') %></p>

      <p class="muted">Posted <%= time_ago_in_words(@audioposting.created_at) %> ago</p>
    </div>

    <% if current_user == @audioposting.user %>
        <div class="span12">
          <%= link_to 'Edit post', edit_audioposting_path(@audioposting), class: 'btn btn-small btn-info' %>
        </div>
    <% end %>
  </div>

  <div class="row-fluid">
    <section class="comments span12">
      <h3>Comments</h3>
      <% @comments.each do |comment| %>
          <article class="comment span6">
            <div class="picture span1"><%= image_tag gravatar(comment.user.email, 50) %></div>

            <%= link_to comment.user.username, comment.user, class: 'span3' %>
            <div class='span8'><%= comment.content %></div>
            <div class="muted comment-created_at"><%= time_ago_in_words(comment.created_at) %> ago</div>
          </article>
      <% end %>
    </section>
  </div>

  <div class="row-fluid">
    <article class="newcomment">
      <h3>Add comment</h3>

      <div class="span12">
        <div class="avatar"><%= image_tag gravatar(@audioposting.user.email, 40) %></div>
        <%= current_user.username %>
      </div>
      <div class="span12">
        <%= form_for [@audioposting, current_user.comments.new] do |f| %>
            <%= f.text_area :content, :size => "25x2", :class => "fullwidth" %>
            <br>
            <%= f.submit "Add Comment", :class => "btn btn-primary" %>
        <% end %>
      </div>
    </article>
  </div>

  <div class="row-fluid">
    <%= link_to 'Back', audiopostings_path, class: 'btn' %>
  </div>
</div>