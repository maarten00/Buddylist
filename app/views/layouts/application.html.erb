<!DOCTYPE html>
<html>
<head>
  <title>Buddylist</title>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<nav class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "Buddylist", root_url, :class => "brand" %>
      <div class="nav-collapse">
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              List
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Users", users_url %></li>
              <li><%= link_to "Blogpostings", blogpostings_url %></li>
              <li><%= link_to "Audiopostings", audiopostings_url %></li>
            </ul>
          </li>
        </ul>
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              New
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'Blogposting', new_blogposting_path %></li>
              <li><%= link_to "Audioposting", new_audioposting_path %></li>

            </ul>
          </li>
        </ul>
        <ul class="nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <% if current_user %>
                  <%= current_user.username %>
              <% else %>
                  Account
              <% end %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user %>
                  <li><%= link_to "My profile", current_user %></li>
                  <li><%= link_to "Log out", log_out_path %></li>
              <% else %>
                  <li><%= link_to "Log in", log_in_path %></li>
                  <li><%= link_to "Sign up", sign_up_path %></li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
<nav>

  <div class="container">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
