<div class="profile span12">
  <h1><%= @user.username %> </h1>
  <% if current_user == @user %>
      <%= link_to 'Edit profile', edit_user_path(@user), class: 'btn btn-small btn-info' %>
  <% end %>

  <div class="avatar"><%= image_tag gravatar(@user.email, 128) %></div>

  <p>Email: <%= @user.email %></p>

  <% if @user == current_user %>
      <%= render partial: "shared/personalpostingslist" %>

<% else %>
      <%= render partial: "personalpostings/new", locals: {user: @user} %>
  <% end %>

  <h2>Friends</h2>

  <%= render partial: "shared/userlist", locals: {users: @user.friends} %>

  <h2>Posts</h2>
  <%= render partial: "shared/postingslist" %>

  <div class="buttons span12">
    <%= link_to 'Back', users_path, class: 'btn' %>
  </div>
</div>